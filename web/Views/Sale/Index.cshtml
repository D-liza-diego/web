
@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_principal.cshtml";
}
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button{
        -webkit-appearance:none;
    }
</style>
<br />
<a asp-controller="Sale" asp-action="Crear" type="button" class="btn btn-outline-secondary" style="margin-bottom:10px">NUEVA VENTA</a>


<br />
<table class="table table-bordered table-resposinve-m" style="text-align: center;" id="tablaGeneral">
   <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th>Items</th>
            <th>Total</th>
            <th>Comprobante</th>
            <th>Fecha</th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in  ViewBag.datos)
        {
           @if(@item.Visibilidad==true)
            {
                <tr>
                    <td>@item.IdcustomerNavigation.Namecustomer</td>
                    <td>@item.Items</td>
                    <td>S/.@item.Total</td>
                    <td>@item.IdComprobanteNavigation.Descripcion</td>
                    <td>@item.Fecha</td>
                    <td>
                       
                        <buttom id="ver" idsale="@item.IdSale" type="button" class="btn btn-outline-info" >
                        <i class="bi bi-list"></i> Detalle
                        </buttom>
                        <buttom id="eliminar" idsale="@item.IdSale" type="button" class="btn btn-outline-danger">
                        <i class="bi bi-x-lg"></i> Eliminar  
                        </buttom>
                        <a asp-controller="Sale" asp-action="sunat" type="button" class="btn btn-outline-warning" asp-route-id=@item.IdSale>Sunat</a>
                    </td>
                </tr>
            }
           
        }
    </tbody>
    
</table>

<div class="modal" tabindex="-1" id="modalDetalle">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Detalle de la venta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <div class="container">
              <div class="form-group row">
                   <div class="col-4">
                    <label class="control-label">Cliente:</label>
                   </div>
                    <div class="col-8">
                    <label id="detalleCliente" class="control-label"></label>
                   </div>
              </div>
               <div class="form-group row">
                   <div class="col-4">
                    <label class="control-label">Comprobante:</label>
                   </div>
                    <div class="col-4">
                    <label id="detalleComprobante" class="control-label"></label>
                   </div>
                    <div class="col-4">
                    <label id="detalleSerie" class="control-label"></label>
                   </div>
              </div>
              <div class="form-group row">
                   <div class="col-4">
                    <label class="control-label">Total:</label>
                   </div>
                    <div class="col-4">
                    <label id="detalleTotal" class="control-label"></label>
                   </div>
              </div>
               <div class="form-group row">
                   <div class="col-4">
                    <label class="control-label">Fecha:</label>
                   </div>
                    <div class="col-8">
                    <label id="detalleFecha" class="control-label"></label>
                   </div>
              </div>
               <div class="form-group">
                   <table class="table" >
                        <thead class="table-dark">
                          <tr>
                            <th>Codigo</th>
                            <th>Producto</th>
                            <th>Cantidad</th>    
                            <th>Precio</th>
                            <th>SubTotal</th>
                          </tr>
                        </thead>
                    <tbody id="body"></tbody>
                    </table>
              </div>

                    
          </div>
      </div>
    </div>
  </div>
</div>

 <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/sale.js" asp-append-version="true"></script>
